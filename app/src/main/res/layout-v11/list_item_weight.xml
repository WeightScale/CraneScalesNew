<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:paddingLeft="5dp"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:id="@+id/layout_item_bluetooth">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="1"
                >
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_medium"
                      android:layout_width="wrap_content"
                      android:id="@+id/bottomText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false"
                      android:gravity="center"/>
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_large"
                      android:layout_width="fill_parent"
                      android:id="@+id/topText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false" android:textStyle="bold"
                      android:gravity="center|right"
                      android:layout_marginRight="@dimen/corners3"/>
        </LinearLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/corners3">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonDelete"
                    android:src="@drawable/ic_delete_black_32dp" android:clickable="true"
                    />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>