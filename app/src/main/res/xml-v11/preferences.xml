<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/Settings">
        <PreferenceScreen android:title="Установки для грейфера" android:summary="Настройки для работы с грейфером магнитной шайбой и тп.">
            <PreferenceCategory android:title="@string/Settings">
                <com.kostya.cranescale.settings.IntegerEditPreference
                        android:title="Дельта стабилизации"
                        android:summary="Значение в диапазоне которого будет сбабилизация загруженого ковша"
                        android:key="@string/KEY_DELTA_STAB"
                        android:numeric="integer" android:inputType="number" android:defaultValue="20"/>
                <com.kostya.cranescale.settings.IntegerEditPreference
                        android:title="@string/auto_capture"
                        android:key="@string/KEY_AUTO_CAPTURE"
                        android:defaultValue="@integer/default_max_auto_capture" android:numeric="integer" android:inputType="number"/>
                <com.kostya.cranescale.settings.IntegerEditPreference
                        android:title="@string/weight" android:summary="@string/sum_weight"
                        android:key="@string/KEY_MAX_NULL" android:numeric="integer" android:inputType="number" android:defaultValue="50"/>
            </PreferenceCategory>
        </PreferenceScreen>
        <Preference android:title="Для администратора" android:summary="Настройки для опытного пользователя (калибровка ...)" android:key="@string/KEY_ADMIN"/>
        <Preference android:title="@string/zeroing" android:key="@string/KEY_NULL" android:inputType="number"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Программа">
        <Preference android:title="@string/about" android:key="@string/KEY_ABOUT"/>
    </PreferenceCategory>
</PreferenceScreen>